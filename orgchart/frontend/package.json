    "lighthouse": "npm run build && npx lighthouse http://localhost:4173 --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "lucide-react": "^0.525.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "react-select": "^5.10.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "bundlesize": "^0.18.2",
    "postcss": "^8.4.21",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^3.4.1",
    "vite": "^7.0.1",
    "vite-plugin-svgr": "^4.3.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/js/*.js",
      "maxSize": "300 kB",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/css/*.css",
      "maxSize": "50 kB",
      "compression": "gzip"
    }
  ]
